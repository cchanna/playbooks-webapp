<div class="container-fluid experience">
	<div class="row row-centered experience">
			Experience
		<span class="experience-bubbles">
			<% (1..@character.experience).each do |n| %>
				<%= link_to "O", minus_experience_character_path(@character), :remote => true, id: "exp#{n}" %>
			<% end %>
			<% (@character.experience+1..5).each do |n| %>
				<%= link_to "o", plus_experience_character_path(@character), :remote => true, id: "exp#{n}" %>
			<% end %>
		</span>
	</div>
</div>