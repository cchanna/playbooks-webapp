$(function() {
  var submitButton;

  console.log("new character");
  var data = "<%= escape_javascript render 'characters/new.html.erb' %>"
  load(data);
  fadeIn();
  submitButton = '#new-character-form #submit-button';
  $('.new-character-form-radio').click(function() {
    console.log("click radio");
    $(submitButton).css({
      display: 'inline'
    });
    return $(submitButton).animate({
      opacity: 1,
      duration: 300
    });
  });
  $('#new-character-form').on('ajax:success', function(e, data, status, xhr) {
    console.log('\nFORM SUBMIT')
    return slideTo(data);
  });
});
