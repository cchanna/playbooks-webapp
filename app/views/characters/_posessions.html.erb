<h3>Posessions</h3>
<% if logged_in? && @character.owned_by?(current_user) %>
	<% items = "" %>
	<% @character.posessions.split("\n").each do |text| %>
		<% items += '<p>' + text + '</p>' %>
	<% end %>
	<%= link_to raw(items), open_text_character_path(@character, field: "posessions"), :remote => true, class: 'well well-sm active', id: "posessions" %>
<% else %>
	<div class="well well-sm">
		<% @character.posessions.split("\n").each do |text| %>
			<p><%= text %></p>
		<% end %>
	</div>
<% end %>
<div class="container-fluid unprepared">
	<div class="row row-centered">
		<div class="unprepared">
			Unprepared
		</div>
		<% if logged_in? && @character.owned_by?(current_user) %>
			<div class="unprepared-bubble active">
					<%= form_for @character, :remote => true do |f| %>
						<%= f.check_box 'unprepared', :class => 'submittable awesome-checkbox' , id: "unprepared", :data => {'icon-checked' => 'i i-circle', 'icon-unchecked' => 'i i-circle-o'}%>
					<% end %>
			</div>
		<% else %>
			<div class="unprepared-bubble">
				<% if @character.unprepared %>
					<i class="i i-circle"></i>
				<% else %>
					<i class="i i-circle-o"></i>
				<% end %>
			</div>
		<% end %>
	</div>
</div>