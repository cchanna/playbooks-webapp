<h3>Posessions</h3>
<div class="well well-sm">
	<% @character.posessions.split("\n").each do |text| %>
		<p><%= text %></p>
	<% end %>
</div>
<div class="container-fluid unprepared">
	<div class="row row-centered">
		<div class="unprepared">
			Unprepared
		</div>
		<div class="unprepared-bubble">
			<% if @character.unprepared %>
				<button type="button" class="btn btn-default btn-circle pressed"></button>
			<% else %>
				<button type="button" class="btn btn-default btn-circle"></button>
			<% end %>
		</div>
	</div>
</div>