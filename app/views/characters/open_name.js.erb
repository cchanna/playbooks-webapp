$("#name-field").show();
$("#name").hide()
// autosize($('textarea'));
$('#overlay').show()

$('#name-field').focus();
$('#name-field').select();
$('#overlay').click( function() {
	save_data("#name-field", "#name");
	
	$('#overlay').hide();
	$("#name").show();
	var value = $("#name-field").val();
	if (value == "") {
		value = "(name)";
	}
	$("#name").html(value);

	$("#name-field").parents('form:first').submit();
	$("#name-field").hide();

	$('#overlay').off("click");
});
