<% relationships.each do |r| %>
  <div class="relationship">
    <% button_name = r.name + ' ' %>
    <% if r.trust >= 0 %>
      <% button_name = button_name + '+' + r.trust.to_s %>
    <% else %>
      <% button_name = button_name + 'âˆ’' + r.trust.abs.to_s %>
    <% end %>
    <%= link_to button_name, relationship_path(id: r.id), remote: true, class: "delete_relationship", method: :delete %>
  </div>
<% end %>
